<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cceaff">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.imraan.computerscienceinduction.StudyAbroad">

    <TextView
        android:id="@+id/editText"
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:layout_x="31dp"
        android:layout_y="25dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="Each year the University of Bradford encourages students to gain experience of studying or working abroad for up to a year. The University recognises the need for preparing global citizens for life and work in an increasingly global environment. Click on the links below to learn more about studying abroad via the University of Bradford."
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <Button
        android:id="@+id/buttonStudyAbroadBooklet"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonStudyAbroadPostcard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:layout_x="34dp"
        android:layout_y="310dp"
        android:text="Study Abroad Booklet"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="276dp" />

    <Button
        android:id="@+id/buttonStudyAbroadPostcard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:layout_x="83dp"
        android:layout_y="233dp"
        android:text="Study Abroad Postcard"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="209dp" />

</RelativeLayout>

    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee"/>

</android.support.v4.widget.DrawerLayout>