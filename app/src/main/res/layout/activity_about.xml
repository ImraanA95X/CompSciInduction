<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cceaff"
    tools:context="com.example.imraan.computerscienceinduction.About">

    <TextView
        android:id="@+id/editText"
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:layout_x="31dp"
        android:layout_y="25dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="Version 1.0\n\nCopyright Â©: Muhammad Imraan Ali\n\nUoB CompSci Induction is a simple and easy to use application designed for the University of Bradford, intended for new students coming to the discipline of Computer Science. It incorporates existing university resources to effectively deliver relevant induction material interactively and conveniently to users.\n\nTo provide any feedback, or report issues or features you would like to see implemented, please email:\n\nM.I.Ali2@bradford.ac.uk\n\nIcon made by Freepik from:\n\nwww.flaticon.com"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:autoLink="all"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        app:srcCompat="@mipmap/app_logo_final"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:layout_below="@+id/imageView2"
        android:text="UoB CompSci Induction"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textSize="20dp"/>

</RelativeLayout>

    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee"/>

</android.support.v4.widget.DrawerLayout>